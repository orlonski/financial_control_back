// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                       String    @id @default(uuid())
  email                    String    @unique
  password                 String
  name                     String
  passwordResetToken       String?
  passwordResetTokenExpiry DateTime?
  createdAt                DateTime  @default(now())
  updatedAt                DateTime  @updatedAt

  accounts     Account[]
  categories   Category[]
  creditCards  CreditCard[]
  transactions Transaction[]
  transfers    Transfer[]
  budgets      Budget[]
  goals        Goal[]
  reminders    Reminder[]

  @@map("users")
}

model Account {
  id             String   @id @default(uuid())
  name           String
  type           String // CHECKING, SAVINGS, CASH, INVESTMENT
  initialBalance Decimal  @default(0) @db.Decimal(15, 2)
  color          String?
  userId         String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions  Transaction[]
  creditCards   CreditCard[]
  transfersFrom Transfer[]    @relation("TransferFrom")
  transfersTo   Transfer[]    @relation("TransferTo")
  goals         Goal[]

  @@index([userId])
  @@map("accounts")
}

model Category {
  id        String   @id @default(uuid())
  name      String
  type      String // INCOME, EXPENSE
  color     String?
  icon      String?
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions Transaction[]
  budgets      Budget[]

  @@index([userId])
  @@map("categories")
}

model CreditCard {
  id         String   @id @default(uuid())
  name       String
  closingDay Int // 1-31 (dia de fechamento da fatura)
  dueDay     Int // 1-31 (dia de vencimento da fatura)
  limit      Decimal? @db.Decimal(15, 2)
  accountId  String // Conta vinculada que paga a fatura
  userId     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  account      Account       @relation(fields: [accountId], references: [id], onDelete: Cascade)
  transactions Transaction[]
  reminders    Reminder[]

  @@index([userId])
  @@index([accountId])
  @@map("credit_cards")
}

model Transaction {
  id                String    @id @default(uuid())
  type              String // INCOME, EXPENSE
  amount            Decimal   @db.Decimal(15, 2)
  date              DateTime // Para cartão: data de vencimento da fatura
  purchaseDate      DateTime? // Data real da compra (usado para cartão)
  description       String
  notes             String?
  paid              Boolean   @default(false) // Se a transação foi paga
  paidAt            DateTime? // Data em que foi efetivamente pago
  isRecurringCharge Boolean   @default(false) // Despesa recorrente (só consome limite na fatura atual)
  accountId         String
  categoryId        String
  creditCardId      String?
  recurrenceId      String?
  installmentNumber Int? // Número da parcela atual (ex: 1, 2, 3)
  totalInstallments Int? // Total de parcelas (ex: 3)
  userId            String
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  account    Account     @relation(fields: [accountId], references: [id], onDelete: Cascade)
  category   Category    @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  creditCard CreditCard? @relation(fields: [creditCardId], references: [id], onDelete: SetNull)
  recurrence Recurrence? @relation(fields: [recurrenceId], references: [id], onDelete: SetNull)
  reminders  Reminder[]

  @@index([userId, date])
  @@index([userId, paid])
  @@index([accountId])
  @@index([accountId, date])
  @@index([categoryId])
  @@index([creditCardId])
  @@index([creditCardId, paid])
  @@index([recurrenceId])
  @@map("transactions")
}

model Transfer {
  id            String   @id @default(uuid())
  amount        Decimal  @db.Decimal(15, 2)
  date          DateTime
  description   String?
  fromAccountId String
  toAccountId   String
  userId        String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user        User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  fromAccount Account @relation("TransferFrom", fields: [fromAccountId], references: [id], onDelete: Cascade)
  toAccount   Account @relation("TransferTo", fields: [toAccountId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, date])
  @@index([fromAccountId])
  @@index([fromAccountId, date])
  @@index([toAccountId])
  @@index([toAccountId, date])
  @@map("transfers")
}

model Recurrence {
  id                String    @id @default(uuid())
  type              String // INSTALLMENT, RECURRING
  interval          String // DAY, WEEK, MONTH, YEAR
  intervalCount     Int // 1-30
  startDate         DateTime
  endDate           DateTime?
  nextDueDate       DateTime? // Próxima data de vencimento
  totalInstallments Int? // Para parcelamento
  description       String? // Descrição da recorrência
  amount            Decimal?  @db.Decimal(15, 2) // Valor da recorrência
  isActive          Boolean   @default(true) // Se está ativa
  accountId         String? // Conta vinculada
  categoryId        String? // Categoria vinculada
  creditCardId      String? // Cartão vinculado (opcional)
  userId            String? // Usuário dono da recorrência
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  transactions Transaction[]
  reminders    Reminder[]

  @@index([userId])
  @@index([isActive])
  @@map("recurrences")
}

// ==========================================
// ORÇAMENTOS (Budgets)
// ==========================================

model Budget {
  id         String   @id @default(uuid())
  amount     Decimal  @db.Decimal(15, 2) // Limite mensal
  month      Int // 1-12
  year       Int
  userId     String
  categoryId String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([userId, categoryId, month, year])
  @@index([userId])
  @@index([userId, month, year])
  @@map("budgets")
}

// ==========================================
// METAS FINANCEIRAS (Goals)
// ==========================================

enum GoalStatus {
  ACTIVE
  COMPLETED
  CANCELLED
}

model Goal {
  id            String     @id @default(uuid())
  name          String
  targetAmount  Decimal    @db.Decimal(15, 2)
  currentAmount Decimal    @default(0) @db.Decimal(15, 2)
  deadline      DateTime
  color         String?
  icon          String?
  status        GoalStatus @default(ACTIVE)
  completedAt   DateTime?
  userId        String
  accountId     String? // Conta vinculada (opcional)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  user          User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  account       Account?           @relation(fields: [accountId], references: [id], onDelete: SetNull)
  contributions GoalContribution[]

  @@index([userId])
  @@index([userId, status])
  @@map("goals")
}

model GoalContribution {
  id        String   @id @default(uuid())
  amount    Decimal  @db.Decimal(15, 2)
  date      DateTime
  notes     String?
  goalId    String
  createdAt DateTime @default(now())

  goal Goal @relation(fields: [goalId], references: [id], onDelete: Cascade)

  @@index([goalId])
  @@map("goal_contributions")
}

// ==========================================
// LEMBRETES (Reminders)
// ==========================================

enum ReminderStatus {
  PENDING
  PAID
  DISMISSED
  OVERDUE
}

model Reminder {
  id            String         @id @default(uuid())
  title         String
  description   String?
  amount        Decimal        @db.Decimal(15, 2)
  dueDate       DateTime
  reminderDays  Int            @default(3) // Dias antes para lembrar
  status        ReminderStatus @default(PENDING)
  isRecurring   Boolean        @default(false)
  userId        String
  transactionId String?
  creditCardId  String?
  recurrenceId  String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  transaction Transaction? @relation(fields: [transactionId], references: [id], onDelete: SetNull)
  creditCard  CreditCard?  @relation(fields: [creditCardId], references: [id], onDelete: SetNull)
  recurrence  Recurrence?  @relation(fields: [recurrenceId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([userId, status])
  @@index([userId, dueDate])
  @@map("reminders")
}
